{
  "name": "root",
  "private": true,
  "author": {
    "name": "Mauro Erta",
    "email": "mauro@vlkstudio.com"
  },
  "scripts": {
    "clean": "lerna clean --yes",
    "build": "lerna run build && npm run build:commonjs",
    "build:commonjs": "lerna run build:commonjs",
    "watch": "lerna run watch",
    "reset": "npm run clean && npm i && lerna bootstrap && npm run build",
    "init:docs": "ts-node scripts/bootstrap-app.ts docs",
    "init:devtool": "ts-node scripts/bootstrap-app.ts devtool",
    "init:web-sandbox": "ts-node scripts/bootstrap-app.ts examples/web-sandbox",
    "init:svelte-sandbox": "ts-node scripts/bootstrap-app.ts examples/svelte-sandbox",
    "init:native-sandbox": "ts-node scripts/bootstrap-app.ts examples/native-sandbox",
    "init:benchmarks": "ts-node scripts/bootstrap-app.ts benchmarks",
    "start:docs": "npm start --prefix docs",
    "start:web-sandbox": "npm start --prefix examples/web-sandbox",
    "start:svelte-sandbox": "npm run dev --prefix examples/svelte-sandbox",
    "start:benchmarks": "npm run all --prefix benchmarks",
    "prepare": "husky install",
    "prettify": "npm run prettify:js && npm run prettify:ts",
    "prettify:js": "npx prettier --write \"**/*.js\"",
    "prettify:ts": "npx prettier --write \"**/*.ts\"",
    "test": "jest --updateSnapshot",
    "test:watch": "jest --watch --updateSnapshot",
    "test:coverage": "jest --verbose --coverage --updateSnapshot",
    "publish": "npm run reset && npx lerna publish from-package --yes --no-verify-access",
    "version": "npx lerna version patch --no-push --no-git-tag-version --conventional-commits",
    "version:minor": "npx lerna version minor --no-push --no-git-tag-version --conventional-commits",
    "version:devtool": "ts-node scripts/version-devtool.ts",
    "postversion": "ts-node scripts/version.ts && npm run version:devtool",
    "postversion:minor": "npm run postversion -- minor"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.64.1",
    "styled-components": "^5.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-lerna-scopes": "^12.0.1",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.1",
    "@types/jest": "^26.0.21",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "jest": "26.6.0",
    "jest-styled-components": "^7.0.3",
    "lerna": "^3.22.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^10.4.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/VLK-STUDIO/morfeo"
  },
  "homepage": "https://morfeo.dev",
  "bugs": {
    "url": "https://github.com/VLK-STUDIO/morfeo/issues"
  }
}
